<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.activitiesandstorage">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/Theme.Activitiesandstorage">

        <!-- Main launcher activity -->
        <activity
            android:name="com.example.activitiesandstorage.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Note screen -->
        <activity
            android:name="com.example.activitiesandstorage.AddNoteActivity"
            android:exported="false" />

        <!-- Delete Note screen -->
        <activity
            android:name="com.example.activitiesandstorage.DeleteNoteActivity"
            android:exported="false" />

        <!-- View Note screen -->
        <activity
            android:name="com.example.activitiesandstorage.ViewNoteActivity"
            android:exported="false" />

    </application>

</manifest>
